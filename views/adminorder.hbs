<!DOCTYPE html>
<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/adminorder">Orders</a>
                <a class="nav-item nav-link" href="/adminuser">Users</a>
            </div>
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/logout">Logout</a>
            </div>
        </nav>
        <h2>Orders</h2>
        <table class="container table table-striped">
            <thead>
                <tr class="row">
                    <th class="col-lg-2">Order ID</th>
                    <th class="col-lg-6">Date</th>
                    <th class="col-lg-2">Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr class="row">
                    <form action="/adminorder" method="POST">
                        <input type="text" name="id" value="{{this._id}}" style="display: none" />
                        <td class="col-lg-2">{{this._id}}</td>
                        <td class="col-lg-6">{{this.date}}</td>
                        <td class="col-lg-2">
                            <select name="status">
                                <option value="pending" selected>Pending</option>
                                <option value="approved">Approved</option>
                                <option value="rejected">Rejected</option>
                            </select>
                        </td>
                        <td class="col-lg-2"><button type="submit">Update</button></td>
                    </form>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </body>
</html>