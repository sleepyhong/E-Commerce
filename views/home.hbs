<!DOCTYPE html>
<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="home.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
            <div class="navbar-nav"></div>
                <a class="nav-item nav-link" href="/home">Home</a>
                <a class="nav-item nav-link" href="/cart">Cart</a>
                <a class="nav-item nav-link" href="/orders">My Orders</a>
            </div>
            <div class="navbar-nav"></div>
                {{#if loggedIn}}
                <a class="nav-item nav-link" href="/logout">Logout</a>
                {{else}}
                <a class="nav-item nav-link" href="/register">Sign up</a>
                <a class="nav-item nav-link" href="/login">Login</a>
                {{/if}}
            </div>
        </nav>
        {{#each brands}}
        <div class="brand container-fluid">
            <div class="row">
                <h3 class="col-lg-12">{{@key}}</h3>
                <button class="previous_btn col-lg-2 btn btn-outline-dark" value="0">Previous</button>
                <div class="col-lg-8 d-flex justify-content-around">
                    {{#each this}}
                    <a class="product" href="/product/{{this._id}}"><img src="img/{{this.name}}.jpg" alt="{{this.name}}"/></a>
                    {{/each}}
                </div>
                <button class="next_btn col-lg-2 btn btn-outline-dark" value="0">Next</button>
            </div>
        </div>
        {{/each}}
    </body>
</html>