<!DOCTYPE html>
<html>
    <head>
        <title>Order</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
            <div class="navbar-nav"></div>
                <a class="nav-item nav-link" href="/home">Home</a>
                <a class="nav-item nav-link" href="/cart">Cart</a>
                <a class="nav-item nav-link" href="/orders">My Orders</a>
            </div>
            <div class="navbar-nav"></div>
                {{#if loggedIn}}
                <a class="nav-item nav-link" href="/logout">Logout</a>
                {{else}}
                <a class="nav-item nav-link" href="/register">Sign up</a>
                <a class="nav-item nav-link" href="/login">Login</a>
                {{/if}}
            </div>
        </nav>
        <h2>My Orders</h2>
        <table class="container table table-striped">
            <thead>
                <tr class="row">
                    <th class="col-lg-2">Order Number</th>
                    <th class="col-lg-8">Date</th>
                    <th class="col-lg-2">Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr class="row">
                    <td class="col-lg-2">{{@index}}</td>
                    <td class="col-lg-8">{{this.us-date}}</td>
                    <td class="col-lg-2">{{this.status}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </body>
</html>