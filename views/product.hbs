<!DOCTYPE html>
<html>
    <head>
        <title>Product</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/product.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
            <div class="navbar-nav"></div>
                <a class="nav-item nav-link" href="/home">Home</a>
                <a class="nav-item nav-link" href="/cart">Cart</a>
                <a class="nav-item nav-link" href="/orders">My Orders</a>
            </div>
            <div class="navbar-nav"></div>
                {{#if loggedIn}}
                <a class="nav-item nav-link" href="/logout">Logout</a>
                {{else}}
                <a class="nav-item nav-link" href="/register">Sign up</a>
                <a class="nav-item nav-link" href="/login">Login</a>
                {{/if}}
            </div>
        </nav>
        <div id="product">
            <h2>{{originalName}}</h2>
            <div>
                <img src="../img/{{product.name}}.jpg" alt="{{product.name}}" />
                <span>{{product.description}}</span>
            </div>
            <form action="/product/{{product._id}}" method="POST">
                <label for="quantity">Quantity: </label>
                <input type="number" id="quantity" name="quantity" min="1" value="1" required />
                <button type="submit">Add to Cart</button>
            </form>
        </div>
        <form id="review-form" action="/review/{{product._id}}" method="POST">
            <textarea id="review" name="review" placeholder="Leave a review..."></textarea>
            <button type="submit">Comment</button>
        </form>
        <div id="reviews">
            <h2>Reviews</h2>
            <table class="container table table-striped">
                <tbody>
                    {{#each reviews}}
                    <tr class="row">
                        <td class="col-lg-2">{{this.username}}</td>
                        <td class="col-lg-10">{{this.comment}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </body>
</html>